{
  "name": "@book-space/server",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "pre-commit": "npm run typecheck",
    "start": "node ./dist/main/",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "dev": "tsx watch ./src/main/index.ts",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "jest --passWithNoTests --runInBand",
    "test:watch": "npm test -- --detectOpenHandles --watch",
    "test:coverage": "npm test -- --detectOpenHandles --coverage --forceExit",
    "typecheck": "tsc --noEmit -p ."
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.11.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "env-var": "^7.4.1",
    "fastify": "^4.26.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@book-space/eslint-config": "workspace:^",
    "@book-space/typescript-config": "workspace:^",
    "eslint": "^9.27.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "prisma": "^5.11.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}
