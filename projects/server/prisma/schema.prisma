generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String             @id @default(uuid())
  token         String?
  name          String
  email         String             @unique
  password      String
  ownWorkspaces Workspace[]
  workspaces    UsersOnWorkspace[]

  @@map("users")
}

model Workspace {
  id        String             @id @default(uuid())
  ownerId   String
  name      String
  tag       String
  resources Resource[]
  spaces    Space[]
  owner     User               @relation(fields: [ownerId], references: [id])
  users     UsersOnWorkspace[]

  @@map("workspaces")
}

enum UsersOnWorkspaceRole {
  MANAGER
  DEFAULT
}

model UsersOnWorkspace {
  userId      String
  workspaceId String
  role        UsersOnWorkspaceRole @default(DEFAULT)
  user        User                 @relation(fields: [userId], references: [id])
  workspace   Workspace            @relation(fields: [workspaceId], references: [id])

  @@id([userId, workspaceId])
  @@map("workspaces_users")
}

model Resource {
  id             String           @id @default(uuid())
  name           String
  Workspace      Workspace        @relation(fields: [workspaceId], references: [id])
  workspaceId    String
  SpaceResources SpaceResources[]

  @@map("resource")
}

model Space {
  id                String              @id @default(uuid())
  name              String
  description       String
  maxAmountOfPeople Int?
  availabilityRange SpaceAvailability[]
  workspaceId       String
  Workspace         Workspace           @relation(fields: [workspaceId], references: [id])
  resources         SpaceResources[]

  @@map("workspace_spaces")
}

model SpaceResources {
  spaceId    String
  resourceId String
  Space      Space    @relation(fields: [spaceId], references: [id])
  Resource   Resource @relation(fields: [resourceId], references: [id])

  @@id([spaceId, resourceId])
  @@map("space_resources")
}

model SpaceAvailability {
  spaceId   String
  weekday   Int
  startTime DateTime @db.Time()
  endTime   DateTime @db.Time()
  Space     Space    @relation(fields: [spaceId], references: [id])

  @@id([spaceId, weekday])
  @@map("space_availability")
}
