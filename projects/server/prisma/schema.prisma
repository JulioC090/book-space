generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String             @id @default(uuid())
  token         String?
  name          String
  email         String             @unique
  password      String
  ownWorkspaces Workspace[]
  workspaces    UsersOnWorkspace[]

  @@map("users")
}

model Workspace {
  id      String             @id @default(uuid())
  ownerId String
  name    String
  tag     String
  spaces  Space[]
  owner   User               @relation(fields: [ownerId], references: [id])
  users   UsersOnWorkspace[]

  @@map("workspaces")
}

model UsersOnWorkspace {
  userId      String
  workspaceId String
  role        UsersOnWorkspaceRole @default(DEFAULT)
  user        User                 @relation(fields: [userId], references: [id])
  workspace   Workspace            @relation(fields: [workspaceId], references: [id])

  @@id([userId, workspaceId])
  @@map("workspaces_users")
}

model Space {
  id                String     @id @default(uuid())
  name              String
  description       String
  maxAmountOfPeople Int?
  workspaceId       String?
  Workspace         Workspace? @relation(fields: [workspaceId], references: [id])

  @@map("workspace_spaces")
}

enum UsersOnWorkspaceRole {
  MANAGER
  DEFAULT
}
